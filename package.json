{
  "name": "lit-manager",
  "version": "1.0.0",
  "type": "module",
  "description": "This service was created to automathize the litts management applying some criteria in order to improve the laboral performance",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -w src -e ts,json --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio"
  },
  "keywords": ["litts, service, c21, Node, js"],
  "author": "miguel-motta",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "10.0.2",
    "@fastify/helmet": "13.0.1",
    "@fastify/rate-limit": "10.2.1",
    "@prisma/client": "6.1.0",
    "bcrypt": "5.1.1",
    "dotenv": "16.4.7",
    "fastify": "5.2.0",
    "jsonwebtoken": "9.0.2",
    "node-imap": "0.9.6",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bcrypt": "5.0.2",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "22.10.5",
    "@vitest/coverage-istanbul": "2.1.8",
    "nodemon": "3.1.9",
    "pino-pretty": "13.0.0",
    "prisma": "6.1.0",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "vitest": "2.1.8"
  }
}
